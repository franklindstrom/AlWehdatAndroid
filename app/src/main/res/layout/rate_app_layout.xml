<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="370dp"
    android:orientation="vertical"
    android:background="#EFEFEF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/rate_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/rate_app_title"
            android:textColor="#000000"
            android:textSize="25dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#00AD1A"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_rate_excellent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_rate_excellent_icon"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rate_item_image_excellent_normal"/>

        <TextView
            android:id="@+id/btn_rate_excellent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/rate_item_excellent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333333"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#666666"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_rate_very_good"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_rate_very_good_icon"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rate_item_image_very_good_normal"/>

        <TextView
            android:id="@+id/btn_rate_very_good_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/rate_item_very_good"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333333"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#666666"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_rate_good"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_rate_good_icon"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rate_item_image_good_normal"/>

        <TextView
            android:id="@+id/btn_rate_good_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/rate_item_good"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333333"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#666666"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_rate_poor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_rate_poor_icon"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rate_item_image_poor_normal"/>

        <TextView
            android:id="@+id/btn_rate_poor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/rate_item_poor"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333333"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#666666"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_rate_bad"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_rate_bad_icon"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rate_item_image_bad_normal"/>

        <TextView
            android:id="@+id/btn_rate_bad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/rate_item_bad"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333333"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#666666"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btn_confirm_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#CCCCCC"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_rate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/btn_rate_cancel"
            android:textColor="#000000"
            android:background="#EFEFEF"/>

        <Button
            android:id="@+id/btn_confirm_rate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/btn_confirm_rate"
            android:textColor="#000000"
            android:background="#EFEFEF"/>
    </LinearLayout>
</LinearLayout>