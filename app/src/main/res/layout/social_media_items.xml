<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/social_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/social_item_icon_facebook"/>

    <ImageView
        android:id="@+id/social_item_arrow"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/social_item_icon"
        android:layout_toEndOf="@+id/social_item_icon"
        android:layout_toRightOf="@+id/social_item_icon"
        android:background="@drawable/social_item_arrow"/>

    <LinearLayout
        android:id="@+id/social_item_content_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/social_item_arrow"
        android:layout_toRightOf="@+id/social_item_arrow"
        android:background="@drawable/social_item_back"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/social_media_item_content_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/social_item_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/social_item_photo_1">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/social_item_photo"
                android:layout_toEndOf="@+id/social_item_photo"
                android:layout_toRightOf="@+id/social_item_photo"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/social_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="نادي الوحدات الرياضي"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/social_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="\@wehdat"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:layout_gravity="left"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/social_media_item_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/social_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/social_media_item_content_2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:gravity="right"/>

            <ImageView
                android:id="@+id/social_item_content_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/social_item_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/social_item_content_image_1"/>

            <ImageView
                android:id="@+id/social_item_reply_icon"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/social_item_reply_icon"/>

            <TextView
                android:id="@+id/social_item_reply_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/social_item_reply_icon"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/social_item_reply_icon"
                android:layout_toStartOf="@+id/social_item_reply_icon"
                android:text="14"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/social_item_comment_icon"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/social_item_reply_icon"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/social_item_reply_counts"
                android:layout_toStartOf="@+id/social_item_reply_counts"
                android:background="@drawable/social_item_comment_icon"/>

            <TextView
                android:id="@+id/social_item_comment_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/social_item_comment_icon"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/social_item_comment_icon"
                android:layout_toStartOf="@+id/social_item_comment_icon"
                android:text="63"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/social_item_like_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/social_item_reply_icon"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/social_item_reply_icon"
                android:layout_toRightOf="@+id/social_item_reply_icon"
                android:text="12"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/social_item_like_icon"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/social_item_like_counts"
                android:layout_toEndOf="@+id/social_item_like_counts"
                android:layout_toRightOf="@+id/social_item_like_counts"
                android:background="@drawable/social_item_like_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>