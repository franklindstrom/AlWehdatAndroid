<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="330dp"
    android:orientation="vertical"
    android:background="#EFEFEF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/share_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/btn_share"
            android:textSize="25dp"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#00AD1A"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_share_with_facebook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon_facebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/social_icon_facebook"/>

        <TextView
            android:id="@+id/title_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon_facebook"
            android:layout_toRightOf="@+id/icon_facebook"
            android:text="@string/btn_share_item_facebook"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333333"
            android:gravity="left"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#666666"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_share_with_twitter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon_twitter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/social_icon_twitter"/>

        <TextView
            android:id="@+id/title_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon_twitter"
            android:layout_toRightOf="@+id/icon_twitter"
            android:text="@string/btn_share_item_twitter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333333"
            android:gravity="left"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#666666"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_share_with_whats_app"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon_whats_app"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/social_icon_whats_app"/>

        <TextView
            android:id="@+id/title_whats_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon_whats_app"
            android:layout_toRightOf="@+id/icon_whats_app"
            android:text="@string/btn_share_item_whats_app"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333333"
            android:gravity="left"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#666666"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_share_with_google_plus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon_google_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/social_icon_google"/>

        <TextView
            android:id="@+id/title_google_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon_google_plus"
            android:layout_toRightOf="@+id/icon_google_plus"
            android:text="@string/btn_share_item_google_plus"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333333"
            android:gravity="left"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#666666"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/btn_confirm_share"
        android:textColor="#000000"
        android:background="#EFEFEF"/>
</LinearLayout>